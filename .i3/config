# exit mode (((
set $exit_mode System (l)ock, l(o)gout, (s)uspend, or (S)hutdown

mode "$exit_mode" {
  bindsym l exec i3lock -c 1f222d, mode "default"
  bindsym o exec ~/.i3/exit_menu.sh, mode "default"
  bindsym s exec i3lock -c 1f222d, exec systemctl suspend, mode "default"
  bindsym Shift+s exec ~/.i3/shutdown_menu.sh, mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+q mode "$exit_mode"

# )))
# resize window (you can also use the mouse for that) (((
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  bindsym h           resize shrink width 10 px or 10 ppt
  bindsym j           resize grow height 10 px or 10 ppt
  bindsym k           resize shrink height 10 px or 10 ppt
  bindsym l           resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
# )))

# vim modes (((
mode "vim-delete" {
  bindsym --release w exec xdotool key Control+Delete; mode "vim"
  bindsym --release 4 exec xdotool key Control+Shift+Delete; mode "vim"
  bindsym --release b exec xdotool key Control+BackSpace; mode "vim"
  bindsym --release 0 exec xdotool key Control+Shift+BackSpace; mode "vim"
}
mode "vim" {
  # arrow-key equivalents
  bindsym --release h exec xdotool key Left
  bindsym --release l exec xdotool key Right
  bindsym --release j exec xdotool key Down
  bindsym --release k exec xdotool key Up
  # word movement
  bindsym --release w exec xdotool key --clearmodifiers Ctrl+Right
  bindsym --release b exec xdotool key --clearmodifiers Ctrl+Left
  # line movement
  bindsym --release 4 exec xdotool key --clearmodifiers End
  bindsym --release 0 exec xdotool key --clearmodifiers Home
  # manipulate text
  bindsym --release x exec xdotool key Delete
  bindsym --release Shift+x exec xdotool key BackSpace
  # longer movement (41 keypresses)
  set $down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down Down
  set $up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up Up
  bindsym --release f exec xdotool key $down
  bindsym --release u exec xdotool key $up
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
  # submodes
  bindsym d mode "vim-delete"
}
bindsym $mod+space mode "vim"
#)))

# i3bar (((
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
# bar {
#         status_command i3status
# }

bar {
  # status_command i3status
  status_command i3blocks -c ~/.i3/i3blocks.conf
  font pango: System San Francisco Display, FontAwesome 12
  position bottom
  tray_output primary
  #strip_workspace_numbers yes
  #bindsym button4 nop
  #bindsym button5 nop
  colors {
    separator  $base03
    background $base01
    statusline $base05
    #                  border  background text
    focused_workspace  $base01 $base01    $base07
    active_workspace   $base01 $base02    $base03
    inactive_workspace $base01 $base01    $base03
    urgent_workspace   $base01 $base01    $base08
  }
}
